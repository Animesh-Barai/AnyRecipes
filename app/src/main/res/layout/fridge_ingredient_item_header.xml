<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fridge_menu_header_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="W, 3:5"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerInside"
        android:src="@drawable/fridge_ingredient_header_image"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fridge_menu_header_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fridge_menu_header_image"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@color/blackQuarter"
        android:textAlignment="center"
        android:text="Search recipe based on ingredient that you have on your fridge."
        android:fontFamily="@font/poppins_medium"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/fridge_menu_header_title"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:src="@color/grayObscure"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fridge_menu_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fridge_menu_header_description"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:textColor="@color/blackQuarter"
        android:layout_marginTop="56dp"
        android:text="Pick Ingredients:"
        android:fontFamily="@font/poppins_medium"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>