<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/search_result_item_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="16dp"
        android:src="@drawable/test_pic"/>

    <TextView
        android:id="@+id/search_result_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/search_result_item_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Spaghetti Carbonara Special With Cheese"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textSize="14sp"
        android:textColor="@color/blackQuarter"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/search_result_item_credit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/search_result_item_author_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_result_item_author_icon"
        app:layout_constraintBottom_toBottomOf="@id/search_result_item_author_icon"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="RM Beringin Edy"
        android:textSize="12sp"
        android:textColor="@color/grayNormal"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/search_result_item_author_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_result_item_title"
        app:layout_constraintStart_toEndOf="@id/search_result_item_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:tint="@color/grayNormal"
        android:src="@drawable/ic_author"/>

    <ImageView
        android:id="@+id/search_result_item_like_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_result_item_author_icon"
        app:layout_constraintStart_toEndOf="@id/search_result_item_image"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_like_filled"
        app:tint="@color/blue500" />

    <TextView
        android:id="@+id/search_result_item_like_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/search_result_item_like_icon"
        app:layout_constraintTop_toTopOf="@id/search_result_item_like_icon"
        app:layout_constraintBottom_toBottomOf="@id/search_result_item_like_icon"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="@color/blue500"
        android:fontFamily="@font/poppins_regular"
        android:text="10000 Likes"/>

    <ImageView
        android:id="@+id/search_result_item_time_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_result_item_author_icon"
        app:layout_constraintStart_toEndOf="@id/search_result_item_like_text"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_clock_filled"
        app:tint="@color/green500" />

    <TextView
        android:id="@+id/search_result_item_time_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/search_result_item_time_icon"
        app:layout_constraintTop_toTopOf="@id/search_result_item_time_icon"
        app:layout_constraintBottom_toBottomOf="@id/search_result_item_time_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="@color/green500"
        android:fontFamily="@font/poppins_regular"
        android:text="60 Minutes"/>

</androidx.constraintlayout.widget.ConstraintLayout>