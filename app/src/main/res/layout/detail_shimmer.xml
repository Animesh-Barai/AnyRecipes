<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/detail_shimmer_dish_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H, 4:3"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:scaleType="centerCrop"
        android:src="@color/shimmerColorOne"
        app:riv_corner_radius="16dp" />

    <ImageView
        android:id="@+id/detail_shimmer_dish_name"
        android:layout_width="256dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_shimmer_dish_image"
        android:src="@drawable/rounded_rectangle_8dp_background"
        app:tint="@color/shimmerColorThree"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/detail_shimmer_like_count_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_shimmer_credit_owner_layout"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_shimmer_like_count_image"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:src="@drawable/rounded_rectangle_8dp_background"
            app:tint="@color/shimmerColorOne"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/detail_shimmer_time_count_image"
            android:layout_width="64dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:src="@drawable/rounded_rectangle_8dp_background"
            app:tint="@color/shimmerColorOne"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_shimmer_credit_owner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_shimmer_dish_name"
        app:layout_constraintStart_toStartOf="@id/detail_shimmer_dish_name"
        app:layout_constraintEnd_toEndOf="@id/detail_shimmer_dish_name"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_shimmer_credit_owner"
            android:layout_width="128dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/rounded_rectangle_8dp_background"
            app:tint="@color/shimmerColorOne"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <ImageView
        android:id="@+id/detail_shimmer_favorite_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/detail_shimmer_dish_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:src="@drawable/rounded_rectangle_8dp_background"
        app:tint="@color/shimmerColorTwo"
        android:contentDescription="@string/favorite_button" />

    <ImageView
        android:id="@+id/detail_shimmer_instruction_title"
        android:layout_width="128dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/detail_shimmer_like_count_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="32dp"
        android:src="@drawable/rounded_rectangle_8dp_background"
        app:tint="@color/shimmerColorThree"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/detail_shimmer_instruction_desc_one"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_shimmer_instruction_title"
        android:src="@drawable/rounded_rectangle_8dp_background"
        app:tint="@color/shimmerColorOne"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/detail_shimmer_instruction_desc_two"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_shimmer_instruction_desc_one"
        android:src="@drawable/rounded_rectangle_8dp_background"
        app:tint="@color/shimmerColorOne"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/detail_shimmer_instruction_desc_three"
        android:layout_width="256dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        android:src="@drawable/rounded_rectangle_8dp_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_shimmer_instruction_desc_two"
        app:tint="@color/shimmerColorOne"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>